{
  "manifest_version": 3,
  "name": "Auto Alpha Binance",
  "version": "3.1",
  "description": "Tự động hóa các thao tác giao dịch trên trang Alpha của Binance.",
   "permissions": [
    "storage",
    "tabs",
    "scripting" 
  ],
  "host_permissions": [
    "https://*.binance.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.binance.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Auto Alpha Tools",
    "default_popup": "popup.html"
  }
}